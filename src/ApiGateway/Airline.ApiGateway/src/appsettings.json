{
  "App": "Airline-ApiGateway",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Yarp": {
    "routes": {
      "flight": {
        "clusterId": "flight",
        "AuthorizationPolicy": "Default",
        "match" : {
         "path": "{**catch-all}" 
        },
        "transforms": [
          {
            "pathPattern" : "{**catch-all}"
          },
          { "RequestHeadersCopy": "true" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "identity": {
        "clusterId": "identity",
        "match" : {
          "pathPattern" : "{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern" : "{**catch-all}"
          }
        ]
      },
      "passenger": {
        "clusterId": "passenger",
        "match" : {
          "path": "passenger/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern" : "{**catch-all}"
          },
          { "RequestHeadersCopy": "true" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "reservation": {
        "clusterId": "reservation",
        "match" : {
          "path": "reservation/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern" : "{**catch-all}"
          },
          { "RequestHeadersCopy": "true" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      }
    },
    "clusters": {
      "flight": {
        "destinations": {
          "destination1": {
            "address" : "https://localhost:5001"
          }
        }
      },
      "identity": {
        "destinations": {
          "destination1": {
            "address" : "https://localhost:5005"
          }
        }
      },
      "passenger": {
        "destinations": {
          "destination1": {
            "address" : "https://localhost:5006"
          }
        }
      },
      "reservation": {
        "destinations": {
          "destination1": {
            "address" : "https://localhost:5007"
          }
        }
      }
    }
  },
  "Jwt": {
    "Authority": "https://localhost:5005"
  },
  "AllowedHosts": "*"
}
